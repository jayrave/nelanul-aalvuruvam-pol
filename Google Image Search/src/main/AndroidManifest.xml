<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="jay.droid.googleimagesearch" >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="jay.droid.googleimagesearch.ImageSearchActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="jay.droid.googleimagesearch.SingleBigImage"
            android:label="@string/title_activity_single_big_image"
            android:noHistory="true"
            android:screenOrientation="landscape"
            android:theme="@style/AppOverlayTheme" >
        </activity>
        <activity
            android:name="jay.droid.googleimagesearch.HistoryActivity"
            android:label="@string/title_activity_history"
            android:noHistory="true"
            android:screenOrientation="portrait">
        </activity>
    </application>

</manifest>
